<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1D1F"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#96AFC5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".dev_infoActivity">

        <!-- Profile Image Container -->

        <!-- Information Container -->

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="180dp"
            android:layout_height="176dp"
            android:layout_marginBottom="32dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <!-- Name Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Name :"
                    android:textColor="#0D0C0C"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:paddingStart="8dp"
                    android:text="W.A.R.P Wickramasinghe"
                    android:textColor="#1A237E"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Student Number Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_no_label"
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Student No :"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/student_no_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:paddingStart="8dp"
                    android:text="2022101586"
                    android:textColor="#1A237E"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Personal Statement Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_statement_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Personal Statement :"
                    android:textColor="#231D1D"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/personal_statement_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="8dp"
                    android:text="Passionate tech student eager to solve real-world problems through innovation and collaboration"
                    android:textColor="#1A237E"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Release Version Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/release_version_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Release Version :"
                    android:textColor="#090909"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/release_version_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingStart="8dp"
                    android:text="v1.0.0"
                    android:textColor="#1A237E"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Exit Button -->
        <Button
            android:id="@+id/exit_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_bg"
            android:text="Exit"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>